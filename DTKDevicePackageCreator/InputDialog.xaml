<Window x:Class="WpfApplication1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="InputDialog" Height="114.407" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Topmost="True">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="{Binding Question}" />
            <TextBox x:Name="tbValue" Text="{Binding Value}"></TextBox>
            <Button Content="OK" Click="Button_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
